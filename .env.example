# Sample environment configuration for Agentic RAG eCommerce system

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ChromaDB Settings
# Leave CHROMA_PERSIST_DIR empty for in-memory storage
CHROMA_COLLECTION=products
CHROMA_PERSIST_DIR=

# Debug Mode
DEBUG=false
